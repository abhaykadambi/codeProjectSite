<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/header'); %>
    <title>Practice Website</title>
</head>
<body>
    <%- include('partials/navbar'); %>
    <div class="container">
        <div class="well well-lg">
            <div class="well-form">
                <div class="form-group">
                    <form action="/post" method="post">
                        <div class="form-group maintxt">
                            <label for="title">Title:</label>
                            <input type="text" class="form-control" id="title" name="title" required>
                        </div>

                        <div class="form-group maintxt">
                            <label for="comment">Content:</label>
                            <textarea class="form-control" id="comment" rows="6" name="content" required></textarea>
                        </div>
                    
                        <div class="form-group maintxt">
                            <label for="des">Discription:</label>
                            <textarea class="form-control" id="des" rows="2" name="discription" required></textarea>
                        </div>

                        <div class="form-group maintxt">
                            <label for="tags">Tags:</label>
                            <input type="tags" class="form-control" id="tags" name="tags" required>
                        </div>

                        <button type="submit" class="btn btn-default" style="display: inline;">Submit</button>
                    </form>
                </div>
            </div>
            
        </div>
        
    </div>
      
</body>
</html>